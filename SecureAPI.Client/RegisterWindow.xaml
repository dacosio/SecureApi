<Window x:Class="SecureAPI.Client.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecureAPI.Client"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="Create a new account" FontSize="35" HorizontalAlignment="Center" Margin="3"/>
            <TextBox x:Name="txtEmail" Margin="2"/>
            <PasswordBox x:Name="txtPassword" Margin="2"/>
            <PasswordBox x:Name="txtConfirmPassword" Margin="2"/>
            <Button x:Name="btnRegister" Margin="2" Content="Create account" HorizontalAlignment="Center" Click="btnRegister_Click"/>

        </StackPanel>
    </Grid>
</Window>
